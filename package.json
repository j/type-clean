{
  "name": "type-clean",
  "description": "A simple (& lightly opinionated) clean architecture framework.",
  "version": "1.0.0-beta.1",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "typescript",
    "ddd",
    "cqrs",
    "clean",
    "architecture"
  ],
  "author": "Jordan <j@jrdn.org>",
  "scripts": {
    "test": "jest",
    "clean": "rm -rf lib/",
    "build": "tsc -b . --force",
    "check": "tsc --noEmit",
    "prepublishOnly": "yarn clean && yarn build",
    "pretty": "prettier 'src/**/*.ts' --write"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "apollo-server": "^2.9.6",
    "husky": ">=1",
    "inversify": "^5.0.1",
    "jest": "^26.6.3",
    "lint-staged": ">=8",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "type-fest": "^0.8.1",
    "type-graphql": "^0.17.5",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!node-ts.+).+\\.ts$"
    ],
    "testRegex": "(src\\/.+\\.|/)(spec)\\.ts$",
    "testEnvironment": "node",
    "bail": true
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn check"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
